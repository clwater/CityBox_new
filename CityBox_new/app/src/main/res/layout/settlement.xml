<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/appbackground">

    <include layout="@layout/title_settlement" />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:padding="10dip"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dcjs_personxinxi"
                android:orientation="vertical"
                android:background="#fff">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="我的信息"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:textColor="#ff3759aa"
                    android:layout_margin="10dp"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:padding="5dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:text="送餐地址:"
                        android:gravity="center"
                        android:layout_weight="2"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:id="@+id/settlement_address"
                        android:hint="点击此处修改地址"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:padding="5dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:text="联系方式:"
                        android:gravity="center"
                        android:layout_weight="2"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:id="@+id/settlement_phone"
                        android:hint="点击此处修改电话"/>
                </LinearLayout>

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#fff"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="打赏"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:textColor="#ff3759aa"
                    android:layout_margin="10dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">



                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="1"
                        android:id="@+id/settlement_reward"
                        android:textSize="24sp"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.7"
                        android:layout_height="match_parent"
                        android:text="元"
                        android:textSize="24sp"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="点击数字修改金额,较高的大赏可以帮助你的订单引起别人的注意"
                        android:textSize="12sp"
                        android:textColor="#ed000c"
                        android:gravity="center"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#fff">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="备注"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:textColor="#ff3759aa"
                    android:layout_margin="10dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:id="@+id/settlement_remarks"
                    android:layout_margin="10dp"
                    android:hint="点击这里添加备注"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#fff">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/settlement_dkname"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:textColor="#ff3759aa"
                    android:layout_margin="10dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:layout_margin="10dp"
                    android:id="@+id/settlement_all"
                    />

            </LinearLayout>



        </LinearLayout>

    </ScrollView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ffa0a0a0"
        android:orientation="horizontal">


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"/>

        <Button
            android:layout_width="30dp"
            android:layout_gravity="center"
            android:layout_height="30dp"
            android:background="@drawable/gouwuche"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="0  元"
            android:id="@+id/settlement_allprice"
            android:textSize="20sp"
            android:textColor="#fff"/>



        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="2dp"
            android:text="去结算"
            android:id="@+id/settlement_finish"
            android:textSize="20sp"
            android:background="@drawable/rounded_button_settlement_finish"
            android:textColor="#fff"/>


    </LinearLayout>




</LinearLayout>
